{
  "name": "jimce",
  "private": true,
  "version": "0.0.0",
  "author": "Jimce-Music",
  "description": "Jimce – a modern cross-platform app for listening to music on another level.",
  "main": "main.js",
  "type": "module",
  "homepage": "https://https://github.com/Jimce-Music",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron --no-sandbox .",
    "clean": "rimraf dist",
    "build-app": "npm run clean && npm run build && electron-builder"
  },
  "build": {
    "appId": "com.jimce-music.jimce",
    "productName": "Jimce",
    "icon": "public/logo-no-bg-outline-fullsize.png",
    "files": [
      "dist",
      "main.js"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "Jimce-${version}-windows-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Jimce"
    },
    "mac": {
      "target": [
        "dmg",
        "pkg",
        "zip"
      ],
      "category": "public.app-category.music",
      "artifactName": "Jimce-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Music",
      "maintainer": "Jimce-Music",
      "synopsis": "Music but different",
      "description": "Jimce – a modern cross-platform app for listening to music on another level.",
      "artifactName": "Jimce-${version}-linux-${arch}.${ext}"
    }
  },
  "dependencies": {
    "@jimce-music/jimce-api-ts": "^1.0.0-dev-7092547",
    "i18next": "^25.7.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-svgr": "^4.5.0"
  }
}
